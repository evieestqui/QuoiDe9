<div class="min-h-screen flex items-center justify-center bg-[#E2FF8A]">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-full max-w-md flex flex-col gap-4 p-6 bg-[#E2FF8A]" }) do |f| %>
    <h1 class="text-2xl font-bold mb-8 text-center">Quoi de 9</h1>

    <div class="flex flex-col gap-4">
      <%= f.input :email,
                  label: "Email or Mobile Number",
                  required: false,
                  autofocus: true,
                  placeholder: "example@example.com",
                  input_html: {
                    class: "w-full px-3 py-2 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black",
                    autocomplete: "email"
                  },
                  label_html: { class: "text-sm text-gray-600 mb-1" } %>

      <%= f.input :password,
                  required: false,
                  placeholder: "••••••••••••",
                  input_html: {
                    class: "w-full px-3 py-2 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black",
                    autocomplete: "current-password"
                  },
                  label_html: { class: "text-sm text-gray-600 mb-1" } %>

      <div class="text-right">
        <%= link_to "Forgot Password?", new_password_path(resource_name), class: "text-sm text-gray-600" %>
      </div>

      <%= f.submit "Log In", class: "block w-full bg-black text-white text-center py-4 rounded-full font-medium text-lg hover:bg-gray-800 transition-colors" %>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center justify-center text-sm text-gray-600">
          Don't have an account?
          <%= link_to "Sign Up", new_registration_path(resource_name), class: "ml-1 font-medium" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
