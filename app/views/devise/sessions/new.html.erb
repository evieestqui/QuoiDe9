<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex flex-col gap-4 p-6" }) do |f| %>
  <h1 class="text-2xl font-bold mb-4">Quoi de 9</h1>

  <div class="flex flex-col gap-4">
    <%= f.input :email,
                label: "Email or Mobile Number",
                required: false,
                autofocus: true,
                placeholder: "example@example.com",
                input_html: {
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black",
                  autocomplete: "email"
                },
                label_html: { class: "text-sm text-gray-600 mb-1" } %>

    <%= f.input :password,
                required: false,
                placeholder: "••••••••••••",
                input_html: {
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black",
                  autocomplete: "current-password"
                },
                label_html: { class: "text-sm text-gray-600 mb-1" } %>

    <div class="text-right">
      <%= link_to "Forgot Password?", new_password_path(resource_name), class: "text-sm text-gray-600" %>
    </div>

    <%= f.button :submit, "Log In",
                class: "w-full bg-black text-white py-3 rounded-lg font-medium hover:bg-gray-800 transition duration-300" %>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center justify-center text-sm text-gray-600">
        Don't have an account?
        <%= link_to "Sign Up", new_registration_path(resource_name), class: "ml-1 font-medium" %>
      </div>
    <% end %>
  </div>
<% end %>
