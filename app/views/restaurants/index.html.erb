<div class="flex flex-col min-h-screen" data-controller="roulette">
  <div class="flex justify-between items-center p-4 bg-white shadow-sm">
    <div class="flex items-center gap-2 bg-gray-100 rounded-full px-3 py-2">
      <span>üìç</span>
      <select class="bg-transparent border-none outline-none text-sm">
        <option value="">16 Via Gaudelet</option>
        <option value="custom">Set Custom Location</option>
      </select>
    </div>

    <div class="flex gap-1 rounded-full bg-[#6A6A6A]/10" role="tablist" aria-orientation="horizontal">
      <button class="isolate group flex items-center rounded-full px-4 py-2 text-sm/7 font-medium bg-black text-white" role="tab" type="button" data-selected="true">
        <i class="fa-solid fa-utensils"></i>
      </button>
      <button class="isolate group flex items-center rounded-full px-4 py-2 text-sm/7 font-medium text-black" role="tab" type="button">
        <i class="fa-solid fa-mountain-sun"></i>
      </button>
    </div>
  </div>

  <div class="flex flex-col gap-4 p-4">
    <%= form_with url: root_path, method: :get, class: "flex flex-col items-center gap-2" do %>
      <div class="relative flex items-center w-full">
        <div class="absolute left-3 text-gray-500">
          <i class="fa-solid fa-magnifying-glass"></i>
        </div>
        <%= text_field_tag :query,
          params[:query],
          class: "w-full rounded-full border-none outline-none pl-10 pr-12 py-2 text-sm/7 font-medium bg-gray-100",
          placeholder: "Food Restrictions, Preferences"
        %>
        <div class="absolute right-3">
          <button type="button" id="filter-button" class="text-gray-500 hover:text-gray-700 focus:outline-none">
            <i class="fa-solid fa-filter"></i>
          </button>
        </div>
      </div>

      <div id="filter-options" class="hidden w-full mt-3 p-3 bg-white rounded-lg shadow-md">
        <p class="text-sm font-medium mb-2">Food Preferences:</p>
        <div class="flex flex-wrap gap-2">
          <label class="inline-flex items-center px-3 py-1 bg-gray-100 hover:bg-gray-200 rounded-full text-sm cursor-pointer">
            <%= check_box_tag 'preferences[]', 'vegetarian', params[:preferences]&.include?('vegetarian'), class: "hidden" %>
            <span class="checkbox-pill">Vegetarian</span>
          </label>
          <label class="inline-flex items-center px-3 py-1 bg-gray-100 hover:bg-gray-200 rounded-full text-sm cursor-pointer">
            <%= check_box_tag 'preferences[]', 'vegan', params[:preferences]&.include?('vegan'), class: "hidden" %>
            <span class="checkbox-pill">Vegan</span>
          </label>
          <label class="inline-flex items-center px-3 py-1 bg-gray-100 hover:bg-gray-200 rounded-full text-sm cursor-pointer">
            <%= check_box_tag 'preferences[]', 'gluten_free', params[:preferences]&.include?('gluten_free'), class: "hidden" %>
            <span class="checkbox-pill">Gluten Free</span>
          </label>
          <label class="inline-flex items-center px-3 py-1 bg-gray-100 hover:bg-gray-200 rounded-full text-sm cursor-pointer">
            <%= check_box_tag 'preferences[]', 'dairy_free', params[:preferences]&.include?('dairy_free'), class: "hidden" %>
            <span class="checkbox-pill">Dairy Free</span>
          </label>
          <label class="inline-flex items-center px-3 py-1 bg-gray-100 hover:bg-gray-200 rounded-full text-sm cursor-pointer">
            <%= check_box_tag 'preferences[]', 'nut_free', params[:preferences]&.include?('nut_free'), class: "hidden" %>
            <span class="checkbox-pill">Nut Free</span>
          </label>
        </div>
        <div class="mt-3 flex justify-end">
          <button type="submit" class="bg-black text-white px-4 py-1 rounded-full text-sm">Apply Filters</button>
        </div>
      </div>
    <% end %>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const filterButton = document.getElementById('filter-button');
        const filterOptions = document.getElementById('filter-options');

        filterButton.addEventListener('click', function() {
          filterOptions.classList.toggle('hidden');
        });

        // Style the selected pills
        document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
          const updatePillStyle = () => {
            const pill = checkbox.nextElementSibling;
            if (checkbox.checked) {
              pill.parentElement.classList.add('bg-black', 'text-white');
              pill.parentElement.classList.remove('bg-gray-100');
            } else {
              pill.parentElement.classList.remove('bg-black', 'text-white');
              pill.parentElement.classList.add('bg-gray-100');
            }
          };

          // Initialize styles
          updatePillStyle();

          // Update on change
          checkbox.addEventListener('change', updatePillStyle);

          // Make the whole pill clickable
          checkbox.nextElementSibling.addEventListener('click', function() {
            checkbox.checked = !checkbox.checked;
            updatePillStyle();
          });
        });
      });
    </script>
  </div>


  <div class="flex justify-center items-center z-50">
    <div class="relative h-[150px] w-[150px] transform translate-y-15 wheel-container ">
      <div class="arrow absolute -top-[10px] left-1/2 transform -translate-x-1/2 w-10 h-10 bg-green-600 z-10" style="clip-path: polygon(50% 100%, 0% 0%, 100% 0%);"></div>
      <canvas data-roulette-target="canvas" id="wheel" width="150" height="150" class="transition-transform duration-[5000ms] ease-[cubic-bezier(0.17,0.67,0.12,0.99)]"></canvas>
    </div>
  </div>


  <div class="mt-auto bg-lime-200 p-8 text-center" style="clip-path: ellipse(100% 100% at bottom center);">
    <h2 class="text-gray-700 text-2xl font-semibold mb-4 mt-5">
      Start Roulette to<br>
      Discover Restaurant
    </h2>

    <p class="text-gray-600 mb-4 text-base">
      Once roulette stops, a random restaurant will be displayed for you.
    </p>

    <div class="flex justify-center">
      <button data-action="click->roulette#spin" id="start-roulette" class="bg-black text-white rounded-full py-3 px-8 font-medium hover:bg-gray-800 transition duration-300">
        Start Roulette
      </button>
    </div>

    <div class="mt-2">
      <div class="text-gray-700 font-medium mb-2">Distance (walking)</div>
      <div class="flex justify-center gap-2 text-xs">
        <div class="bg-lime-300 rounded-full px-4 py-2 text-gray-700">‚â§5 min</div>
        <div class="bg-black rounded-full px-4 py-2 text-white">‚â§10 min</div>
        <div class="bg-lime-300 rounded-full px-4 py-2 text-gray-700">‚â§20 min</div>
      </div>
    </div>
  </div>
</div>
