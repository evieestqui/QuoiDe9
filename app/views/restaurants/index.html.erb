<div class="flex flex-col min-h-screen" data-controller="roulette">
  <div class="flex justify-between items-center p-4 bg-white shadow-sm">
    <div class="flex items-center gap-2 bg-gray-100 rounded-full px-3 py-2">
      <span>üìç</span>
      <select class="bg-transparent border-none outline-none text-sm">
        <option value="">16 Via Gaudelet</option>
        <option value="custom">Set Custom Location</option>
      </select>
    </div>

    <div class="flex gap-1 rounded-full bg-[#6A6A6A]/10" role="tablist" aria-orientation="horizontal">
      <button class="isolate group flex items-center rounded-full px-4 py-2 text-sm/7 font-medium bg-black text-white" role="tab" type="button" data-selected="true">
        <i class="fa-solid fa-utensils"></i>
      </button>
      <button class="isolate group flex items-center rounded-full px-4 py-2 text-sm/7 font-medium text-black" role="tab" type="button">
        <i class="fa-solid fa-mountain-sun"></i>
      </button>
    </div>
  </div>

  <div class="flex flex-col gap-4 p-4">
    <%= form_with url: search_path, method: :get, class: "flex flex-col items-center gap-2", data: { roulette_target: "form" } do %>

      <div data-controller="modal" class="w-full">
        <div class="relative z-20 hidden" data-modal-target="dialog" aria-labelledby="modal-title" role="dialog" aria-modal="true">
          <div class="fixed inset-0 bg-black/80 transition-opacity" aria-hidden="true"></div>

          <div  class="fixed inset-0 z-10 w-screen overflow-y-auto">
            <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">

              <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                  <div class="sm:flex sm:items-start">

                    <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                      <div class="mt-2">
                        <p class="text-sm text-gray-500">Select your food preferences and dietary restrictions below.</p>

                        <div class="mt-4">
                          <h4 class="font-medium text-gray-700 mb-2">Preferred Food Style</h4>
                          <div class="flex flex-wrap gap-2">

                            <% FOOD_PREFERENCES.each do |preference| %>
                              <div class="preference-pill">
                                <%= check_box_tag "food_preferences[]", preference, false, id: "preference_#{preference.parameterize}", class: "hidden" %>
                                <label for="preference_<%= preference.parameterize %>" class="inline-block px-3 py-1 rounded-full bg-gray-200 text-sm cursor-pointer hover:bg-gray-300 transition-colors">
                                  <%= preference %>
                                </label>
                              </div>
                            <% end %>
                          </div>
                        </div>

                        <div class="mt-4">
                          <h4 class="font-medium text-gray-700 mb-2">Dietary Restrictions</h4>
                          <div class="flex flex-wrap gap-2">

                            <% FOOD_RESTRICTIONS.each do |restriction| %>
                              <div class="restriction-pill">
                                <%= check_box_tag "food_restrictions[]", restriction, false, id: "restriction_#{restriction.parameterize}", class: "hidden" %>
                                <label for="restriction_<%= restriction.parameterize %>" class="inline-block px-3 py-1 rounded-full bg-gray-200 text-sm cursor-pointer hover:bg-gray-300 transition-colors">
                                  <%= restriction %>
                                </label>
                              </div>
                            <% end %>
                          </div>
                        </div>

                        <style>
                          .preference-pill input:checked + label,
                          .restriction-pill input:checked + label {
                            background-color: #000;
                            color: #fff;
                          }
                        </style>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
                  <button type="button" data-action="modal#close" class="inline-flex w-full justify-center rounded-md bg-black px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-gray-800 sm:ml-3 sm:w-auto">Apply</button>
                  <button type="button" data-action="modal#close" class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 ring-1 shadow-xs ring-gray-300 ring-inset hover:bg-gray-50 sm:mt-0 sm:w-auto">Cancel</button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <button type="button" data-action="modal#open" class="relative flex items-center w-full rounded-full border-none outline-none pl-4 pr-12 py-2 text-sm/7 font-medium bg-gray-100">
          Food Restrictions, Preferences

          <div class="absolute right-3">
            <i class="fa-solid fa-filter"></i>
          </div>
        </button>
      </div>
    <% end %>
  </div>


  <div class="flex justify-center items-center z-10">
    <div class="relative h-[220px] w-[220px] transform translate-y-15 wheel-container ">
      <div class="arrow absolute -top-[10px] left-1/2 transform -translate-x-1/2 w-10 h-10 bg-green-600 z-10" style="clip-path: polygon(50% 100%, 0% 0%, 100% 0%);"></div>
      <canvas data-roulette-target="canvas" id="wheel" width="220" height="220" class="transition-transform duration-[5000ms] ease-[cubic-bezier(0.17,0.67,0.12,0.99)]"></canvas>
    </div>
  </div>


  <div class="mt-auto bg-lime-200 p-8 text-center" style="clip-path: ellipse(100% 100% at bottom center);">
    <h2 class="text-gray-700 text-2xl font-semibold mb-4 mt-5">
      Start Roulette to<br>
      Discover Restaurant
    </h2>

    <p class="text-gray-600 mb-4 text-base">
      Once roulette stops, a random restaurant will be displayed for you.
    </p>

    <div class="flex justify-center">
      <button data-action="click->roulette#spin" id="start-roulette" class="bg-black text-white rounded-full py-3 px-8 font-medium hover:bg-gray-800 transition duration-300">
        Start Roulette
      </button>
    </div>
  </div>
</div>
