<div class="bg-[#E2FF8A] min-h-screen p-4 pb-24">
  <h2 class="text-lg font-medium mb-4">Your current bookings</h2>

  <div class="space-y-3">
    <% @future_bookings.each do |booking| %>
      <div class="bg-white rounded-lg p-4 shadow-sm">
        <h3 class="font-medium"><%= booking.restaurant.name %></h3>
        <div class="flex gap-4 text-sm text-gray-600 mt-1">
          <div class="flex items-center gap-1">
            <span><%= booking.number_of_people %> People</span>
          </div>
          <div class="flex items-center gap-1">
            <span><%= booking.date.strftime("%B %d") %></span>
            <span><%= booking.time.strftime("%I:%M %p") %></span>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @past_bookings.present? %>
    <h2 class="text-lg font-medium mt-8 mb-4">Booking history</h2>
    <div class="space-y-3">
      <% @past_bookings.each do |booking| %>
        <div class="bg-white rounded-lg p-4 shadow-sm opacity-70">
          <h3 class="font-medium"><%= booking.restaurant.name %></h3>
          <div class="flex gap-4 text-sm text-gray-600 mt-1">
            <div class="flex items-center gap-1">
              <span><%= booking.number_of_people %> People</span>
            </div>
            <div class="flex items-center gap-1">
              <span><%= booking.date.strftime("%B %d") %></span>
              <span><%= booking.time.strftime("%I:%M %p") %></span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= link_to root_path, class: "fixed bottom-4 left-1/2 -translate-x-1/2 bg-black w-[calc(100%-2rem)] text-white rounded-full px-8 text-center py-4 font-medium text-lg hover:bg-gray-800 transition-colors" do %>
    Back
  <% end %>
</div>
